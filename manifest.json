{
    "manifest_version": 3,
    "name": "Notizie di Politica",
    "version": "2.1",
    "description": "Estensione Chrome per visualizzare le notizie di politica dai siti ilpost.it, ansa.it e gazzettaufficiale.it",
    "permissions": [
      "activeTab"
    ],
    "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    }
}
  